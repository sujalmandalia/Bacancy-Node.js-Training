<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Todo List</title>
  </head>
  <body>
    <h1>Todo List</h1>
    <form action="/api/v1/tasks/add" method="POST">
      <input type="text" name="task" required />
      <button type="submit">Add Task</button>
    </form>
    <ul>
      <% tasks.forEach(task => { %>
      <li>
        <%= task.task %>
        <form
          action="/api/v1/tasks/update/<%= task.id %>"
          method="POST"
          style="display: inline"
        >
          <input type="text" name="updatedTask" required />
          <button type="submit">Update</button>
        </form>
        <form
          action="/api/v1/tasks/delete/<%= task.id %>"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
